@model InAndOut.Models.Expense

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>Delete Expense</h2>
        <div class="col">
            <label asp-for="ExpenseName"></label>
            <input asp-for="ExpenseName" disabled class="form-control" placeholder="Expense Name">
            <span asp-validation-for="ExpenseName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" disabled class="form-control" placeholder="Amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div>
            <input class="btn btn-danger w-75" type="submit" value="Delete">
            <a asp-action="Index" class="btn btn-success w-75" value="Back">Back</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
